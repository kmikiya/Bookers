<h1 class="header">Books</h1>

<table>
    <thead>
      <tr>
        <th>title</th>
        <th>body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
       <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td> <!--blogモデル内のtitleカラムという意味？-->
        <td><%= book.body %></td>
        <td>Show</td>
        <td>Edit</td>
        <td>Destroy</td>
      </tr>
    </tbody>

<% end %>

<h2>New book</h2>
<%= form_with model:@book, local:true do |f| %>
<div>
  <label>title</label>
  <%= f.text_field :title %>
</div>
<div>
  <label>body</label>
  <%= f.text_area :body %>
</div>

  <%= f.submit 'Create Book' %>

<% end %>